<!DOCTYPE html>
<html>
  <head>
    <title>Dashboard</title>
    <link rel="stylesheet" href="/stylesheets/screen.css" />
    <link rel="stylesheet" href="/stylesheets/styles.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <script defer src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.3/jquery.min.js"></script>
    <script defer src='js/app.js'></script>
  </head>
  <body>
    <main>
      <input id="userId" type="hidden" value="<%=user.id%>">
      <section class="hero is-primary is-small">
        <!-- Hero header: will stick at the top -->
        <div class="hero-head">
          <header class="nav">
            <div class="container">
              <div class="nav-left">
                <div class="nav-item">
                  Student Dashboard
                </div>
              </div>
              <div class="nav-right nav-menu">
                <span class="nav-item">
                  <a class="button is-primary is-inverted">
                    <span class="icon">
                      <i class="fa fa-sign-out" aria-hidden="true"></i>
                    </span>
                    <span>Log Out</span>
                  </a>
                </span>
              </div>
            </div>
          </header>
        </div>

        <!-- Hero content: will be in the middle -->
        <div class="hero-body">
          <div class="container">
            <h1 class="title">
              Welcome <%= user.firstName %>
            </h1>
            <h2 class="subtitle">
              <%= user.role %>
            </h2>
          </div>
        </div>
      </section>
      <section class='section'>
        <div class="container">
          <div class="tile is-ancestor">
            <% var id = 1 %>
            <% Object.keys(languages).forEach(function(prop) { %>
            <% var text = 'text' + id %>
            <% var value = 'value' + id %>
            <% var color = '' %>
            <% if (languages[prop] === '1') { %>
            <%   color = 'is-danger' %>
            <% } else if (languages[prop] === '2') { %>
            <%   color = 'is-warning' %>
            <% } else if (languages[prop] === '3') { %>
            <%   color = 'is-success' %>
            <% } else if (languages[prop] === '4') { %>
            <%   color = 'is-info' %>
            <% } else if (languages[prop] === '5') { %>
            <%   color = 'is-light' %>
            <% } %>
              <div class="tile is-parent">
                <div class="tile is-child box hero is-bold <%=color%>">
                  <div class="hero-head">
                    <div class="nav">
                      <div class="container">
                        <div class="nav-left">
                          <div id="<%=text%>" value="<%- prop %>" class="nav-item">
                            <%- prop %>
                          </div>
                        </div>
                        <div class="nav-right">
                          <div class="nav-item">
                            <button id="<%=id%>" class='button <%=color%> is-inverted editButton'>Edit</button>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="hero-body has-text-centered">
                    <input id="<%=value%>" class='specialInput title' type="text" value="<%- languages[prop]%>" disabled>
                  </div>
                </div>
              </div>
              <% id ++ %>
            <% }) %>
            </div>
            <div class="tile is-ancestor">
              <div class="tile is-parent">
                <div class="tile is-child box">Not Yet Grasped</div>
              </div>
              <div class="tile is-parent">
                <div class="tile is-child box">How can instructional team improve?</div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>
    <footer class="footer">
      <div class="container">
        <div class="content has-text-centered">
          <p>
            <strong>GA Student Dashboard</strong> developed by <a href="http://giftofjehovah.github.io/">Jonathan Phoon</a>
            <br />
            Built With <a href="http://locomotivejs.org/">Locomotive</a> & <a href="http://bulma.io/">Bulma</a>
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>
