<!DOCTYPE html>
<html>
  <head>
    <title>Admin</title>
    <link rel="stylesheet" href="/stylesheets/screen.css" />
    <link rel="stylesheet" href="/stylesheets/styles.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script defer src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.3/jquery.min.js"></script>
    <script defer src='js/app.js'></script>
  </head>
  <body>
    <main>
      <section class="hero is-primary is-bold is-danger">
        <!-- Hero header: will stick at the top -->
        <div class="hero-head">
          <header class="nav">
            <div class="container">
              <div class="nav-left">
                <div class="nav-item">
                  Admin Dashboard
                </div>
              </div>
              <div class="nav-right nav-menu">
                <span class="nav-item">
                  <form action="/logout" method="POST">
                    <button class="button is-danger is-inverted">
                      <span class="icon">
                        <i class="fa fa-sign-out" aria-hidden="true"></i>
                      </span>
                      <span>Log Out</span>
                    </button>
                  </form>
                </span>
              </div>
            </div>
          </header>
        </div>

        <!-- Hero content: will be in the middle -->
        <div class="hero-body">
          <div class="container">
            <h1 class="title">
              Welcome <%= user.firstName %>
            </h1>
            <h2 class="subtitle">
              <%= user.role %>
            </h2>
          </div>
        </div>
      </section>
      <section class='section'>
        <div class="container">
          <div class="tile is-ancestor">
            <div class="tile is-2">
              <div class="tile is-parent is-vertical">
                <div class="tile is-child">
                  <table class='table is-bordered is-narrow'>
                    <thead>
                      <tr>
                        <th>Languages Added</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% languages.forEach(function (language) { %>
                        <tr>
                          <td><%= language.language %></td>
                        </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
                <div class="tile is-child">
                  <p class="control has-addons">
                    <input class="input" type="text" placeholder="Add new Language">
                      <a class="button is-info">Add</a>
                  </p>
                </div>
              </div>
            </div>
            <div class="tile is-10">
              <div class="tile is-parent">
                <div class="tile is-child">
                  <table class="table is-bordered is-narrow">
                    <thead>
                      <tr>
                        <th>No.</th>
                        <th>Student</th>
                        <% languages.forEach(function (language) { %>
                          <th><%=language.language%></th>
                        <% }) %>
                      </tr>
                    </thead>
                    <tbody>
                      <% users.forEach(function (user, i) { %>
                        <td><%= i + 1 %></td>
                        <td><a href="/student/<%=user.id%>"><%= user.firstName + ' ' + user.lastName %></a></td>
                        <% Object.keys(user.languages).forEach(function(key){ %>
                          <% var color = '' %>
                          <% if (user.languages[key] === '1') { %>
                          <%   color = 'is-danger' %>
                          <% } else if (user.languages[key] === '2') { %>
                          <%   color = 'is-warning' %>
                          <% } else if (user.languages[key] === '3') { %>
                          <%   color = 'is-success' %>
                          <% } else if (user.languages[key] === '4') { %>
                          <%   color = 'is-info' %>
                          <% } else if (user.languages[key] === '5') { %>
                          <%   color = 'is-light' %>
                          <% } %>
                          <td><span class="tag <%=color%>"><%= user.languages[key] %></span></td>
                        <% }) %>
                      <% }) %>
                      <tr>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </tile>
            </div>
          </div>
        </div>
      </section>
    </main>
    <footer class="footer">
      <div class="container">
        <div class="content has-text-centered">
          <p>
            <strong>GA Student Dashboard</strong> developed by <a href="http://giftofjehovah.github.io/">Jonathan Phoon</a>
            <br />
            Built With <a href="http://locomotivejs.org/">Locomotive</a> & <a href="http://bulma.io/">Bulma</a>
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>
